{
  "compilerOptions": {
    "outDir": "build",
    "module": "esnext",
    "target": "es3",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "declaration": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["src/types", "node_modules/@types", "@testing-library/jest-dom"],
    "resolveJsonModule": true,
    "composite": true
  },
  "exclude": ["node_modules", "build"]
}